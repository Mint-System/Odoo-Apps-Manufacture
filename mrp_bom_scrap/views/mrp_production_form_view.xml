<?xml version='1.0' encoding='UTF-8'?>
<odoo>

  <record id="mrp_bom_form_view_scrap_type" model="ir.ui.view">
    <field name="model">mrp.bom</field>
    <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//page[@name='components']//field[@name='product_qty']" position="before">
          <field name="lot_id" context="{'default_product_id': product_id}" optional="hide"/>
        </xpath>
        <xpath expr="//sheet/group/group[2]" position="after">
          <group>
            <field name="location_id" attrs="{ 'required': [('type','=','scrap')], 'invisible': [('type','!=','scrap')] }"/>
            <field name="location_dest_id" attrs="{ 'required': [('type','=','scrap')], 'invisible': [('type','!=','scrap')] }"/>
          </group>
        </xpath>
      </data>
    </field>
  </record>

</odoo>
