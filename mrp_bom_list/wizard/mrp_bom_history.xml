<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_bom_history" model="ir.ui.view">
        <field name="name">BoM List at Date</field>
        <field name="model">mrp.bom.history</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <field name="bom_id" invisible="1"/>
                    <field name="inventory_datetime"/>
                </group>
                <footer>
                    <button name="open_at_date" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mrp_bom_history" model="ir.actions.act_window">
        <field name="name">MRP BoM History</field>
        <field name="res_model">mrp.bom.history</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
