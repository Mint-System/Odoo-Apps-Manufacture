<?xml version='1.0' encoding='UTF-8'?>
<odoo>

  <record id="mrp_bom_form_view" model="ir.ui.view">
    <field name="name">mrp_bom_position.mrp_bom_form_view</field>
    <field name="model">mrp.bom</field>
    <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='bom_line_ids']/tree[1]/field[@name='sequence']" position="after">
          <field name="position"/>
        </xpath>
      </data>
    </field>
  </record>

</odoo>
